<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/deadpool2"> <!-- Color de fondo temático de Marvel -->



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/deadpool1"
        />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEADPOOL"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:lineSpacingExtra="8dp"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:paddingHorizontal="10dp"
        android:background="@drawable/fondonegro"/>

    <TextView
        android:id="@+id/realNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre Real: Wade Winston Wilson"
        android:textSize="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:padding="4dp"
        android:background="@drawable/fondonegro"/>

    <TextView
        android:id="@+id/powersTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Poderes: Fuerza sobrehumana, Regeneración total, Gran habilidad para pelear"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="6dp"
        android:background="@drawable/fondonegro"/>

    <TextView
        android:id="@+id/weaknessesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Debilidades: Sus enfermedades mentales, destrucción celular completa"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="6dp"
        android:background="@drawable/fondonegro"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Historia"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:padding="6dp"
        android:background="@drawable/fondonegro"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="6dp"
        android:background="@drawable/fondonegro">

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deadpool es un personaje ficticio del universo de Marvel Comics. Creado por el escritor Fabian Nicieza y el dibujante/escritor Rob Liefeld, hizo su primera aparición en ‘The New Mutants’ #98 en febrero de 1991. A lo largo de los años, Deadpool se ha convertido en uno de los personajes más icónicos y populares de Marvel debido a su estilo único y su personalidad irreverente.\nSuele vestir un traje de spandex rojo y negro, con detalles en blanco. Su traje está equipado con numerosas bolsas y fundas que contienen armas y utensilios. Su rostro es el resultado de una transformación que le otorgó un aspecto desfigurado y arruinado, pero su expresión siempre está oculta detrás de una máscara completa que presenta un diseño característico con ojos blancos y una amplia sonrisa.\nLo que distingue a Deadpool es su personalidad extravagante y humor negro. Es conocido por romper la cuarta pared, lo que significa que a menudo se dirige directamente a los lectores del cómic, comentando sobre su situación o incluso sobre los propios elementos del cómic. Es famoso por su habilidad para hacer chistes en los momentos más inapropiados y por su actitud sarcástica incluso en situaciones peligrosas."
            android:lineSpacingExtra="3dp"
            android:textSize="16sp"
            android:layout_marginHorizontal="10dp"
            android:padding="4dp"
            android:textColor="@android:color/white" /> <!-- Color de texto en blanco -->

    </ScrollView>

</LinearLayout>
